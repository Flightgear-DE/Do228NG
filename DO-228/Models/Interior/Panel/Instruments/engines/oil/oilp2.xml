<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>oilgauge.ac</path>

  <animation>
    <object-name>OilBezel</object-name>
    <object-name>OilFace</object-name>
    <object-name>Oil.needle1</object-name>
    <object-name>Oil.needle2</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>OilFace</object-name>
    <object-name>Oil.needle1</object-name>
    <object-name>Oil.needle2</object-name>
    <condition>
      <property>/controls/lighting/instrument-lights</property>
    </condition>
    <emission>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Oil.needle1</object-name>
    <property>engines/engine[1]/n2</property>
    <interpolation>
      <entry><ind>   0 </ind><dep> 0 </dep></entry>
      <entry><ind> 110 </ind><dep> 90 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Oil.needle2</object-name>
    <property>engines/engine[1]/torque-ftlb</property>
    <interpolation>
      <entry><ind>    0 </ind><dep> 42 </dep></entry>
      <entry><ind> 5000 </ind><dep> 68 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
